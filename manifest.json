{
  "manifest_version": 3,
  "name": "Elegant Bookmark Manager",
  "version": "1.0.0",
  "description": "A beautiful dark-themed bookmark manager for Chrome",
  "permissions": [
    "bookmarks",
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "dist/index.html",
    "default_title": "Bookmark Manager"
  },
  "icons": {
    "16": "dist/favicon.ico",
    "48": "dist/favicon.ico", 
    "128": "dist/favicon.ico"
  },
  "web_accessible_resources": [
    {
      "resources": ["dist/*"],
      "matches": ["<all_urls>"]
    }
  ]
}